<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="@drawable/layout_border"
    >

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/back"
        android:layout_width="45dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="750dp"
        android:background="#00000000"
        android:rotationY="180"
        app:srcCompat="@drawable/skip_music"
        />

    <TextView
        android:id="@+id/Artisttext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/MusicalLogo"
        android:layout_marginStart="180dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="675dp"
        android:layout_toEndOf="@+id/MusicalLogo"
        android:layout_toRightOf="@+id/MusicalLogo"
        android:text="Artist"
        android:textColor="#429C47"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/NameMusictext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/MusicalLogo"
        android:layout_marginStart="180dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="650dp"
        android:layout_toEndOf="@+id/MusicalLogo"
        android:layout_toRightOf="@+id/MusicalLogo"
        android:text="Song"
        android:textColor="#9C27B0"
        android:textSize="18sp" />
    <ImageView
        android:id="@+id/MusicalLogo"
        app:srcCompat="@drawable/musiclogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="150dp"
        android:layout_alignTop="@+id/foward"
        android:background="@drawable/layout_border"/>
    <ImageView
        android:id="@+id/play"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="750dp"
        android:layout_toLeftOf="@id/foward"
        app:srcCompat="@drawable/playlogo" />

    <ImageView
        android:id="@+id/close"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/down_arrow" />

    <ImageView
        android:id="@+id/foward"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="750dp"
        android:layout_marginLeft="300dp"
        app:srcCompat="@drawable/skip_music" />

</FrameLayout>